<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#66ffff"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_lines_group_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/icons8_star_24"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_lines_group_bus_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/icons8_bus_24"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_lines_group_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/icons8_time_machine_24"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_lines_group_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/icons8_available_updates_24"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_lines_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>